<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".combo_nhom">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="800dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPizza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PizzaHub"
                    android:textColor="#EF0D0D"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
            <LinearLayout
                android:background="#EF0d0d"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/colorPrimary1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMBO 1 người"
                    android:textSize="17dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:textColor="#EF0D0D"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/cb1"></Button>
                <Button
                    android:id="@+id/cb2"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:background="#EF0D0D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMBO 1 nhóm"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="1"></Button>
                <Button
                    android:id="@+id/cb3"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/colorPrimary1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMBO ưu đãi"
                    android:textSize="17dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:textColor="#EF0D0D"
                    android:textStyle="bold"
                    android:layout_weight="1"></Button>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/shadow">

                        <ImageView
                            android:id="@+id/imgItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/combo4"
                            android:padding="20dp"
                            ></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgItem1"
                            android:layout_margin="5dp"
                            android:text="COMBO PIZZAHUB 4 NGƯỜI 429.000đ"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/cc"
                            android:text="3 Pizza tự chọn size L"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/cc"
                            android:text="Coca + mỳ ý + khoai tây chiên"></TextView>

                        <Button
                            android:layout_width="135dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/dathang"
                            android:padding="5dp"
                            android:text="đặt hàng"
                            android:layout_marginBottom="5dp"
                            android:textColor="#fff"
                            android:background="@drawable/button"
                            android:backgroundTint="#FF0000"
                            android:textSize="20dp"
                            android:textStyle="bold"></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/shadow">

                        <ImageView
                            android:id="@+id/imgItem2"
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:background="@drawable/combonhom"
                            android:layout_margin="5dp"
                            android:padding="20dp"
                         ></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgItem1"
                            android:layout_margin="5dp"
                            android:text="COMBO PIZZAHUB 02 1479.000đ"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/cc"
                            android:text="1 Pizza tự chọn size L"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/cc"
                            android:text="2 Mỳ ý + 2 Coca + 1 khoai tây chiên"></TextView>

                        <Button
                            android:layout_width="135dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:id="@+id/dathang1"
                            android:text="đặt hàng"
                            android:background="@drawable/button"
                            android:textColor="#fff"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="#ef0d0d"
                            android:textSize="20dp"
                            android:textStyle="bold"></Button>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/shadow">

                        <ImageView
                            android:id="@+id/imgItem3"
                            android:layout_width="wrap_content"
                            android:background="@drawable/radiusimg"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:padding="20dp"
                            android:src="@drawable/cb111"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgItem1"
                            android:layout_margin="5dp"
                            android:text="COMBO PIZZAHUB A 145.000đ"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/cc"
                            android:text="1 Pizza thập cẩm"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/cc"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="1 Pizza thập cẩm"></TextView>

                        <Button
                            android:layout_width="135dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#ef0d0d"
                            android:gravity="center"
                            android:background="@drawable/button"
                            android:padding="5dp"
                            android:text="đặt hàng"
                            android:textColor="#fff"
                            android:layout_marginBottom="5dp"
                            android:textSize="20dp"
                            android:textStyle="bold"></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/shadow">

                        <ImageView
                            android:id="@+id/imgItem4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:padding="20dp"
                            android:background="@drawable/radiusimg"
                            android:src="@drawable/cb111"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgItem1"
                            android:layout_margin="5dp"
                            android:text="COMBO PIZZAHUB A 145.000đ"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/cc"
                            android:text="1 Pizza thập cẩm"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/cc"
                            android:text="1 Pizza thập cẩm"></TextView>


                        <Button
                            android:layout_width="135dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#ef0d0d"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="đặt hàng"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:background="@drawable/button"
                            android:textStyle="bold"></Button>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>